<h1>Candidacies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Aluno</th>
      <th>Nota</th>
      <th>CRE</th>
      <th>Disciplina</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @candidacies.each do |candidacy| %>
      <tr>
        <td><%= candidacy.user.email %></td>
