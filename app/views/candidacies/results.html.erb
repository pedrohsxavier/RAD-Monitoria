<div class="container mt-5">
  <% @subjects.each do |subject| %>
    <h4><%= subject.nome %></h4>
    <table class="table table-striped mb-5">
    <thead>
      <tr>
        <th>Matrícula</th>
        <th>Aluno</th>
        <th>Nota</th>
        <th>CRE</th>
        <th>Média</th>
        <th>Resultado</th>
      </tr>
    </thead>

    <tbody>
      <% subject.candidacies.each do |candidacy| %>
        <% if candidacy.resultado %>
          <tr class="bg-success">
        <% else %>
          <tr>
        <% end %>
        <td><%= candidacy.user.matricula %></td>
        <td><%= candidacy.user.nome %></td>
        <td><%= candidacy.nota %></td>
        <td><%= candidacy.cre %></td>
        <td><%= candidacy.calcMedia %></td>
        <% if candidacy.resultado %>
          <td><%= candidacy.resultado %></td>
        <% else %>
          <td>Não-classificado</td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>
